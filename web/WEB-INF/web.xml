<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadGameServlet</servlet-name>
        <servlet-class>servlets.LoadGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JoinGameServlet</servlet-name>
        <servlet-class>servlets.JoinGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GamesListServlet</servlet-name>
        <servlet-class>servlets.GamesListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameDataServlet</servlet-name>
        <servlet-class>servlets.GameDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameRequestServlet</servlet-name>
        <servlet-class>servlets.GameRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BoardUpdaterServlet</servlet-name>
        <servlet-class>servlets.BoardUpdaterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuitRequestServlet</servlet-name>
        <servlet-class>servlets.QuitRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pages/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/userslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>LoadGameServlet</servlet-name>
    <url-pattern>/loadgame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JoinGameServlet</servlet-name>
        <url-pattern>/pages/joingame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GamesListServlet</servlet-name>
        <url-pattern>/gameslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameDataServlet</servlet-name>
        <url-pattern>/gamedata</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameRequestServlet</servlet-name>
        <url-pattern>/gamerequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BoardUpdaterServlet</servlet-name>
        <url-pattern>/boardupdater</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuitRequestServlet</servlet-name>
        <url-pattern>/pages/quitgame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/pages/logout</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>